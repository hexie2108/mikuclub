<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:background = "@color/colorPrimary"
    tools:context = "org.mikuclub.app.ui.activity.WelcomeActivity">

        <TextView
            android:id = "@+id/welcome_title"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "@string/app_name"
            android:textColor = "@android:color/white"
            android:textSize = "@dimen/text_big"
            app:layout_constraintBottom_toBottomOf = "parent"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintTop_toTopOf = "parent" />

        <TextView
            android:id = "@+id/welcome_version_name"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "@string/app_version_name"
            android:textColor = "@android:color/white"
            android:textSize = "@dimen/text_large"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintTop_toBottomOf = "@id/welcome_title" />

        <ProgressBar
            android:id = "@+id/welcome_progress_bar"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"


            android:layout_marginBottom = "@dimen/ultra_large"
            android:indeterminateTint = "@android:color/white"
            app:layout_constraintBottom_toBottomOf = "parent"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintStart_toStartOf = "parent" />

        <TextView
            android:id = "@+id/welcome_info_text"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginBottom = "@dimen/ultra_large"
            android:text = "@string/default_text"
            android:textColor = "@android:color/white"
            android:textSize = "@dimen/text_normal"
            android:visibility = "invisible"
            app:layout_constraintBottom_toBottomOf = "parent"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintStart_toStartOf = "parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
