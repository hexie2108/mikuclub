<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "wrap_content">

        <ProgressBar
            android:id = "@+id/list_item_progress_bar"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:indeterminateTint = "@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf = "parent"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintTop_toTopOf = "parent" />


        <ImageView
            android:id = "@+id/list_item_info_icon"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:src = "@drawable/baseline_error_outline_24"
            android:visibility="gone"

            android:layout_marginRight="@dimen/normal"
            app:layout_constraintBottom_toBottomOf = "parent"
            app:layout_constraintEnd_toStartOf = "@id/list_item_info_text"
            app:layout_constraintHorizontal_chainStyle = "packed"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintTop_toTopOf = "parent" />

        <TextView
            android:id = "@+id/list_item_info_text"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "@string/default_text"
            android:visibility="gone"

            app:layout_constraintBottom_toBottomOf = "parent"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintStart_toEndOf = "@id/list_item_info_icon"
            app:layout_constraintTop_toTopOf = "parent"

            />

</androidx.constraintlayout.widget.ConstraintLayout>
