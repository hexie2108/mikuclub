<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"

    tools:context = "org.mikuclub.app.ui.activity.HomeActivity"
    >

        <!-- toolBar=============================-->
        <fragment
            android:id="@+id/toolbar"
            android:name="org.mikuclub.app.ui.fragments.HomeToolBarFrame"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_normal"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

           />
        <!-- ======================toolBar-->


        <androidx.viewpager.widget.ViewPager
            android:id = "@+id/homeMainViewPager"
            android:layout_width = "0dp"
            android:layout_height = "0dp"
            android:padding = "@dimen/padding_normal"

            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintTop_toBottomOf = "@id/toolbar"
            app:layout_constraintBottom_toTopOf="@id/homeBottomMenuView"
            />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id = "@+id/homeBottomMenuView"
            android:layout_width = "match_parent"
            android:layout_height = "@dimen/height_normal"
            android:layout_gravity = "bottom"
            android:background = "@color/colorGrey"
            app:labelVisibilityMode = "labeled"
            app:menu = "@menu/home_bottom_menu"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            />



        <!--com.android.volley.toolbox.NetworkImageView
